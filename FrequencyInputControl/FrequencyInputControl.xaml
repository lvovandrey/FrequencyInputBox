<UserControl x:Class="FrequencyInputControl.FrequencyInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrequencyInputControl"
             mc:Ignorable="d" >
    <Grid>
        <TextBox x:Name="TxtBlock1" 
                 Text="{Binding InputString, 
                        RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType={x:Type local:FrequencyInputControl}}, 
                                        UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                 Width="100" 
                 Height="22" 
                 Background="Green"/>

    </Grid>
</UserControl>
