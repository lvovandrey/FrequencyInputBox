<UserControl x:Class="FrequencyInputBox.FrequencyInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FrequencyInputBox"
             xmlns:converters="clr-namespace:FrequencyInputBox.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ValidityToColorConverter x:Key="ValidityToColorConverter"/>
    </UserControl.Resources>
    <Grid>
        <TextBox 
            Text="{Binding InputString,  UpdateSourceTrigger=PropertyChanged}" 
            BorderBrush="{Binding Validity, Converter={StaticResource ValidityToColorConverter}}"
            Foreground="{Binding Validity, Converter={StaticResource ValidityToColorConverter}}" 
            />
    </Grid>
</UserControl>
