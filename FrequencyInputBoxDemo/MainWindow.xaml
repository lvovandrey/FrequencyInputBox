<Window x:Class="FrequencyInputBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrequencyInputBoxDemo"
        xmlns:fib="clr-namespace:FrequencyInputBox;assembly=FrequencyInputBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <fib:FrequencyInputBox 
            x:Name="FrequencyInputBox1" 
            Width="200" Height="20" />
        <TextBox 
            Width="222" Height="22" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            x:Name="TextBox1" 
            Text="{Binding ElementName=FrequencyInputBox1, Path=FrequencyValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        
        
        <!--<TextBox x:Name="Source" Width="200" Height="20" Margin="76,326,516,73"/>
        <TextBox Text="{Binding ElementName=Source, Path=Text}" Width="200" Height="20" Margin="344,326,248,73"/>-->
        <Button Margin="240,8,434,382" Click="Button_Click" Content="Start" />
        <Button Margin="374,8,300,382" Click="Button_Click_1"  Content="Stop" />
    </Grid>
</Window>
