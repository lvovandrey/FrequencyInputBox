<Window x:Class="FrequencyInputBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrequencyInputBoxDemo"
        xmlns:fib="clr-namespace:FrequencyInputBox;assembly=FrequencyInputBox"
        xmlns:fic="clr-namespace:FrequencyInputControl;assembly=FrequencyInputControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="1">
                <Grid>
                <fic:FrequencyInputControl Grid.Column="1" Panel.ZIndex="1" x:Name="LoadingIndicator1"
                                            FrequencyValue="{Binding HZ, 
                                                             UpdateSourceTrigger=PropertyChanged,
                                                             Mode=TwoWay}"
                     HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100"/>

                <TextBlock Text="{Binding IsLoading}" Width="100" Height="30" Grid.Row="1" HorizontalAlignment="Right"/>
                <TextBox Text="{Binding HZ, UpdateSourceTrigger=PropertyChanged}"  Width="100" Height="30" Margin="0 100 0 0" Grid.Row="1" HorizontalAlignment="Right"/>

                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,40,0,0" Width="100" Height="30" Click="Button_Click" Content="Start" />
                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,40,0,0" Width="100" Height="30" Click="Button_Click_1" Content="Stop" />

                </Grid>

            </TabItem>
           
        </TabControl>
    </Grid>
</Window>
