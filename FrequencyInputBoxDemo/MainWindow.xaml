<Window x:Class="FrequencyInputBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrequencyInputBoxDemo"
        xmlns:fib="clr-namespace:FrequencyInputBox;assembly=FrequencyInputBox"
        xmlns:fic="clr-namespace:FrequencyInputControl;assembly=FrequencyInputControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="1">
                <Grid>
                <fic:FrequencyInputControl Grid.Column="1" Panel.ZIndex="1" x:Name="LoadingIndicator1"
                                            FrequencyValue="{Binding HZ, 
                                                             UpdateSourceTrigger=PropertyChanged,
                                                             Mode=TwoWay}"
                     HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100"/>

                <Button Width="100" Height="30" Grid.Row="1" Content="Simulate loading"  Command="{Binding SimulateLoadingCommand}" />
                <TextBlock Text="{Binding IsLoading}" Width="100" Height="30" Grid.Row="1" HorizontalAlignment="Right"/>
                <TextBox Text="{Binding HZ, UpdateSourceTrigger=PropertyChanged}"  Width="100" Height="30" Margin="0 100 0 0" Grid.Row="1" HorizontalAlignment="Right"/>
                </Grid>

            </TabItem>
            <TabItem Header="2">
                <Grid>
                <fib:FrequencyInputBox 
            x:Name="FrequencyInputBox1" 
            FrequencyInHzValue="{Binding FrequencyTest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Width="200" Height="20" />
                <TextBox 
            Width="222" Height="22" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            x:Name="TextBox1" 
            Text="{Binding FrequencyTest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Margin="240,8,434,382" Click="Button_Click" Content="Start" />
                <Button Margin="374,8,300,382" Click="Button_Click_1"  Content="Stop" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
